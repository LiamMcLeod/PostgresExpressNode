main
    .container-fluid
        .content-container
            if !loggedIn
                form(action="/api/login" method="POST" )
                    .panel.panel-default
                        .panel-heading.text-center.textmuted Log In
                        .panel-body.text-center
                            .row
                                .col-sm-6
                                    label Username:
                                    br
                                    input#email(type="username" name="username" title="" autofocus required)
                                .col-sm-6
                                    label Password:
                                    br
                                    input#password(type="password" name="password" title="" required)
                            if status != 'Success!'
                                span.text-danger #{status}
                        .panel-footer
                            .row
                                .col-xs-6.text-left
                                    input(type="checkbox" name="remember")
                                    span &nbsp;Remember?
                                .col-xs-6.text-right
                                    input.btn.btn-default(type="submit" value="Submit")
            else
                if status != 'Success!'
                    .row
                else
                    #login-status.row.jumbotron.text-success.alert-success.border-success.text-center(onclick="toggleHide(this)")
                        h2.text-success #{status}
                .row.text-left
